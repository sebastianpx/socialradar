{
  "analysis":{
    "analyzer":{
      "analyzer_shingle":{
        "tokenizer":"standard",
        "filter":["standard", "lowercase", "filter_english", "filter_german", "filter_www", "filter_shingle"]
      }
    },
    "filter":{
      "filter_shingle":{
        "type":"shingle",
        "max_shingle_size":5,
        "min_shingle_size":2,
        "output_unigrams":"false"
      },
      "filter_stop":{
        "type":"stop",
        "enable_position_increments":"true"
      },
	  "filter_english":{
        "type":"stop",
        "stopwords":"_english_"
      },
	  "filter_german":{
        "type":"stop",
        "stopwords":"_german_"
      },
	  "filter_www":{
        "type":"stop",
		"stopwords_path":"../../data/dictionaries/stopwords/general/Stopwords_www.txt"
      },
	  "filter_berlin":{
        "type":"stop",
		"stopwords_path":"../../data/dictionaries/stopwords/general/BadLocationWords_Berlin.txt"
      }
	}
  }
}